<Window x:Class="crsGen.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		mc:Ignorable="d"
		Title="Curse Generator 2.1"
		Height="229.266"
		Width="449.705">
	<Grid ClipToBounds="True">
		<Grid.RowDefinitions>
			<RowDefinition Height="22*" />
			<RowDefinition Height="68*" />
			<RowDefinition Height="9*" />
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="10*" />
			<ColumnDefinition Width="93*" />
			<ColumnDefinition Width="41*" />
			<ColumnDefinition Width="279*" />
			<ColumnDefinition Width="19*" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<Frame Content=""
			   Grid.ColumnSpan="5"
			   Grid.RowSpan="3">
			<Frame.Background>
				<LinearGradientBrush EndPoint="0.5,1"
									 StartPoint="0.5,0">
					<GradientStop Color="#FF7C93DE"
								  Offset="0.106" />
					<GradientStop Color="#FFCB3030"
								  Offset="1" />
				</LinearGradientBrush>
			</Frame.Background>
		</Frame>
		<Button x:Name="GenerateCurseBtn"
				Content="Show Love"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Width="75"
				Margin="0,0.277,0,0"
				Click="GenerateCurseBtn_Click"
				Height="20"
				Grid.Column="1"
				Grid.Row="1" />
		<Button x:Name="CopyBtn"
				Content="Copy"
				HorizontalAlignment="Left"
				VerticalAlignment="Top"
				Width="75"
				Margin="0,25,0,0"
				Height="20"
				Grid.Column="1"
				Grid.Row="1"
				Click="CopyBtn_Click" />
		<TextBox Name="CurseBox"
				 Background="Transparent"
				 FontFamily="Futura, Century Gothic"
				 Height="136"
				 TextWrapping="Wrap"
				 Text="TextBox"
				 FontSize="20"
				 VerticalAlignment="Bottom"
				 Grid.Column="3"
				 FontWeight="SemiBold"
				 Grid.Row="1"
				 HorizontalAlignment="Left"
				 Width="277"
				 BorderThickness="0"
				 MouseDown="CurseBox_MouseDown"
				 AutoWordSelection="True"
				 IsReadOnly="True"
				 Cursor="Arrow"
				 AllowDrop="False"
				 IsHitTestVisible="True" />
		<Label x:Name="notificationLabel"
			   Visibility="Hidden"
			   Content="Label"
			   HorizontalAlignment="Left"
			   VerticalAlignment="Top"
			   Height="25"
			   Width="112"
			   Grid.Column="3"
			   Margin="167,111,0,0"
			   Grid.Row="1"
			   FontSize="8"
			   IsVisibleChanged="notificationLabel_IsVisibleChanged" />
		<Label Content=""
			   HorizontalAlignment="Left"
			   VerticalAlignment="Top"
			   RenderTransformOrigin="16.078,2.444"
			   Width="277"
			   Grid.Column="3"
			   Grid.Row="1"
			   Height="136"
			   MouseDown="Label_MouseDown" />
	</Grid>
</Window>
